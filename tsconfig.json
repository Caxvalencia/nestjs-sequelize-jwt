{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "strictNullChecks": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "include": [
    "migrate.ts",
    "server.ts",
    "config/**/*.ts",
    "filters/**/*.ts",
    "lib/**/*.ts",
    "middlewares/**/*.ts",
    "migrations/**/*.ts",
    "models/**/*.ts",
    "modules/**/*.ts",
    "tests/*.ts"
  ],
  "exclude": [
    "node_modules",
    "assets"
  ]
}